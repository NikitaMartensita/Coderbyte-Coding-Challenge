// Question: Have the function LetterCapitalize(str) take the str parameter being passed 
// and capitalize the first letter of each word. Words will be separated by only one space. 

function LetterCapitalize(str) { 
var array = str.split(" ");
var arr=[];
for (var i=0; i<array.length; i++) {
  arr[i]=array[i].replace(array[i][0],array[i][0].toUpperCase());
}
str = arr.join(" ");
  
// code goes here  
return str; 
}
   
// keep this function call here 
// to see how to enter arguments in JavaScript scroll down
LetterCapitalize(readline());           
